using namespace std;
#include <stdio.h>
#include <iostream>

int main(){
	int op;//variable para elegir la opción  que deseamos realizar.

	cout<<"       CURSOS DE EXTENSIÓN    "<<endl;
	cout<<"     \n1-----VISUALIZACION DE CURSOS     "<<endl;
	cout<<"     \n2-----LOGIN      "<<endl;
	cout<<"		\n------Eliga la opción que desee\n"<<endl;
	cin>>op;
	
	switch(op){
	case 1:
		cout<<"       CURSOS DE EXTENSIÓN    "<<endl;
		cout<<"---------------curso 1"<<endl;
		cout<<"---------------curso 2"<<endl;
		cout<<"---------------curso 3"<<endl;
		break;
	case 2:
		cout<<"       CURSOS DE EXTENSIÓN    "<<endl;
		cout<<"\n1--------ADMIN"<<endl;
		cout<<"\n2--------USUARIO"<<endl;
		break;
	}
	

}
